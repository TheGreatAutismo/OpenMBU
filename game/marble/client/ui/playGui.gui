function setHudVisible( %visible )
{
   HUD_ShowPowerUp.setVisible( %visible );
   Sec_Hundredth.setVisible( %visible );
   Sec_Tenth.setVisible( %visible );
   MinSec_Point.setVisible( %visible );
   Sec_One.setVisible( %visible );
   Sec_Ten.setVisible( %visible );
   MinSec_Colon.setVisible( %visible );
   Min_Ten.setVisible( %visible );
   Min_One.setVisible( %visible );
   TimeBox.setVisible( %visible );
   BoostBar.setVisible( %visible );
   ChatTextForeground.setVisible( %visible );
   HelpTextForeground.setVisible( %visible );
   SecondaryCountdown.show = %visible;
   RootBackgroundBitmaps.setVisible( !%visible );

   if( %visible == false )
   {
      GemsTotalOne.setVisible( %visible );
      GemsTotalTen.setVisible( %visible );
      GemsTotalHundred.setVisible( %visible );
      GemsSlash.setVisible( %visible );
      GemsFoundOne.setVisible( %visible );
      GemsFoundTen.setVisible( %visible );
      GemsFoundHundred.setVisible( %visible );
      HUD_ShowGem.setVisible( %visible );
	   CenterMessageDlg.setVisible( %visible );
   }
   else
   {
      PlayGui.setGemCount( PlayGui.gemCount );
      PlayGui.setMaxGems( PlayGui.maxGems );
      PlayGui.setPoints( PlayGui.points );
   }
